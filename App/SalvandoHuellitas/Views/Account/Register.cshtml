@model SalvandoHuellitas.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Crear cuenta";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card" style="width: 30rem;">
        <div class="text-center">
            <img src="~/images/Logo.svg" class="img-fluid rounded-start" alt="Register Image" style="max-width: 200px;">
        </div>
        <div class="card-body">
            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresar nombre"/>
                </div>
                <div class="mb-3">
                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                    <input asp-for="Telefono" type="tel" pattern="[0-9]*" class="form-control" placeholder="Ingresar teléfono"/>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Correo Electrónico</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Ingresar correo electrónico"/>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Ingresar contraseña"/>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar contraseña"/>
                </div>
                <div id="validationSummary" asp-validation-summary="All" class="alert alert-danger" style="display:none;"></div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="submit-button w-100">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const validationSummary = document.getElementById('validationSummary');
            const form = document.querySelector('form');

            form.addEventListener('submit', function (event) {
                setTimeout(function () {
                    if (validationSummary.innerHTML.trim() === '') {
                        validationSummary.style.display = 'none';
                    } else {
                        validationSummary.style.display = 'block';
                    }
                }, 100);
            });

            if (validationSummary.innerHTML.trim() === '') {
                validationSummary.style.display = 'none';
            }
        });
    </script>
}