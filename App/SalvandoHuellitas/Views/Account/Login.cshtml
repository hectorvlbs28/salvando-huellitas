@model SalvandoHuellitas.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card" style="width: 30rem;">
        <div class="text-center">
            <img src="~/images/Logo.svg" class="img-fluid rounded-start" alt="Login Image" style="max-width: 200px;">
        </div>
        <div class="card-body">
            <form asp-action="LoginService" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Correo Electrónico</label>
                    <input asp-for="Email" type="email" placeholder="Ingresar correo electrónico" class="form-control"/>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <input asp-for="Password" type="password" placeholder="Ingresar contraseña" class="form-control"/>
                </div>

                <div id="validationSummary" asp-validation-summary="All" class="alert alert-danger" style="display:none;"></div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="submit-button w-100">Ingresar</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const validationSummary = document.getElementById('validationSummary');
            const form = document.querySelector('form');

            form.addEventListener('submit', function (event) {
                setTimeout(function () {
                    if (validationSummary.innerHTML.trim() === '') {
                        validationSummary.style.display = 'none';
                    } else {
                        validationSummary.style.display = 'block';
                    }
                }, 100);
            });

            if (validationSummary.innerHTML.trim() === '') {
                validationSummary.style.display = 'none';
            }
        });
    </script>
}